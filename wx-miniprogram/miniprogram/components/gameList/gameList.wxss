.game-list {
  padding: 20rpx 0;
}

.game-item {
  display: flex;
  padding: 20rpx;
  margin-bottom: 20rpx;
  background: #fff;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.game-cover {
  width: 200rpx;
  height: 200rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.game-info {
  flex: 1;
}

.game-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.game-desc {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.game-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
}

.game-tag {
  font-size: 24rpx;
  color: #666;
  background: #f5f5f5;
  padding: 4rpx 12rpx;
  border-radius: 6rpx;
}

.game-arrow {
  color: #999;
  margin-left: 20rpx;
} 