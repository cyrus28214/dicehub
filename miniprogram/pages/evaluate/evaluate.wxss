.evaluate-container {
  display: flex;
  flex-direction: column;
  padding: 20px;
  background-color: #f9f9f9;
}

.header {
  text-align: center;
  margin-bottom: 20px;
}

.title {
  font-size: 24px;
  font-weight: bold;
}

.user-info {
  display: flex;
  align-items: center;
  margin-bottom: 20px;
}

.user-avatar {
  width: 40px;
  height: 40px;
  border-radius: 20px;
  margin-right: 10px;
}

.username {
  font-size: 18px;
  color: #333;
}

.rating-section {
  display: flex;
  justify-content: center;
  margin-bottom: 20px;
}

.star-icon {
  width: 45px; /* 增大星星图标的宽度 */
  height: 40px; /* 增大星星图标的高度 */
  margin: 0 10px; /* 增大星星之间的间距 */
  cursor: pointer; /* 鼠标悬停时显示为可点击 */
}

.comment-input {
  width: 100%;
  box-sizing: border-box;
  height: 100px;
  border: 1px solid #999;
  border-radius: 10rpx;
  padding: 10px;
  margin-bottom: 20px;
  font-size: 1rem;
}

.submit-button {
  background-color: #333333;
  color: white;
  border-radius: 10rpx;
  width: 100%;
  cursor: pointer;
  font-size: 1.1rem;
} 