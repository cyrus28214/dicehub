<!-- WXML 修改 -->
<view class="container" wx:if="{{game}}">
    <!-- 固定头部 -->
    <view class="fixed-header">
      <view class="header">
        <image class="cover" src="{{game.cover}}" mode="aspectFill"></image>
        <view class="info">
          <view class="title">{{game.title}}</view>
          <view class="meta">
            <text class="players">👥 {{game.minPlayers}}-{{game.maxPlayers}}人</text>
            <text class="duration">⏳ {{game.duration}}分钟</text>
          </view>
          <view class="rating">
            <text class="score">{{game.rating}}</text>
            <text class="max">/10.0</text>
          </view>
          <view class="tags">
            <text class="tag" wx:for="{{game.tags}}" wx:key="id">{{item.name}}</text>
          </view>
        </view>
      </view>

      <view class="section">
        <view class="section-title">桌游简介</view>
        <view class="description">{{game.description}}</view>
      </view>

      <!-- 固定导航栏 -->
      <view class="quick-nav">
        <view class="nav-item" bindtap="jumpToProcess" data-section="process">
          <image src="/images/icon_process.png" class="nav-icon"/>
          <text>游戏流程</text>
        </view>
        <view class="nav-item" bindtap="jumpToRoles" data-section="roles">
          <image src="/images/icon_role.png" class="nav-icon"/>
          <text>身份速查</text>
        </view>
        <view class="nav-item" bindtap="jumpToErrata" data-section="errata">
          <image src="/images/icon_errata.png" class="nav-icon"/>
          <text>易漏规则</text>
        </view>
      </view>
    </view>

    <!-- 可滚动内容区 -->
    <scroll-view 
    class="content-scroll" 
    scroll-y 
    scroll-with-animation 
    scroll-top="{{scrollTop}}"
    style="padding-top: {{headerHeight}}px;">
      <!-- 游戏流程 -->
      <view id="process" class="section">
        <view class="section-title">
          游戏流程
        </view>
        
        <view class="process-flow">
          <block wx:for="{{game.processSteps}}" wx:key="index">
            <!-- 步骤块 -->
            <view class="step-card">
              <view class="step-header">
                <view class="step-index">{{index + 1}}</view>
                <text class="step-title">{{item.title}}</text>
              </view>
              <view class="step-content">{{item.content}}</view>
            </view>
            <!-- 步骤间箭头（最后一步不显示） -->
            <view wx:if="{{index < game.processSteps.length - 1}}" class="step-arrow">
              <image src="/images/icon_arrow_down.png" class="arrow-icon" />
            </view>
          </block>
        </view>
      </view>
      <!-- 身份速查 -->
      <view id="roles" class="section">
        <view class="section-title">
           身份速查
        </view>
        
        <view class="role-grid">
          <block wx:for="{{game.roles}}" wx:key="id">
            <view 
              class="role-card {{item.team === '好人' ? 'good' : 'bad'}}"
              style="height: {{cardHeight}}rpx;"
            >
              <view class="role-content">
                <text class="role-name">{{item.name}}</text>
                <text class="role-desc">{{item.description}}</text>
              </view>
            </view>
          </block>
        </view>
      </view>
      <!-- 易漏规则 -->
      <view id="errata" class="section">
      <view class="search-bar">
        <input 
          class="search-input"
          placeholder="搜索易漏规则..."
          placeholder-class="placeholder"
          bindinput="onSearchInput"
          value="{{searchKeyword}}"
        />
        <image 
          src="/images/icon_search.png" 
          class="search-icon" 
          wx:if="{{!searchKeyword}}"
        />
      </view>

