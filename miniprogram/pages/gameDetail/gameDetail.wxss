.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 180rpx;
}

.header {
  background: #fff;
  padding: 40rpx;
  display: flex;
  align-items: flex-start;
}

.cover {
  width: 240rpx;
  height: 240rpx;
  border-radius: 12rpx;
  margin-right: 32rpx;
}

.info {
  flex: 1;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
}

.rating {
  margin-bottom: 20rpx;
}

.score {
  font-size: 40rpx;
  font-weight: bold;
  color: #ff9500;
}

.max {
  font-size: 28rpx;
  color: #999;
}

.tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.tag {
  font-size: 24rpx;
  color: #666;
  background: #f5f5f5;
  padding: 6rpx 16rpx;
  border-radius: 6rpx;
}

.section {
  margin-top: 20rpx;
  padding: 32rpx;
  background: #fff;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
}

.description {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

.actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 24rpx 32rpx;
  background: #fff;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
  display: flex;
  gap: 24rpx;
}

.action-btn {
  flex: 1;
  height: 88rpx;
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
}

.action-btn.share {
  background: #f5f5f5;
  color: #333;
}

.action-btn.primary {
  background: #07c160;
  color: #fff;
}

.icon {
  margin-right: 8rpx;
}

.comment-section {
  margin-top: 20rpx;
  padding: 32rpx;
  background: #fff;
}

.comment-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
}

.no-comment {
  color: #999;
  margin-bottom: 10rpx;
  font-size: 28rpx;
  line-height: 1.6;
}

.evaluate-btn {
  background-color: #07c160;
  color: #fff;
  padding: 5rpx 10rpx;
  border-radius: 5rpx;
  margin-bottom: 10rpx;
  font-size: 24rpx;
} 

.comment-content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

.comment-date {
  font-size: 28rpx; 
  color: #999;
  line-height: 1.6;
  font-style: italic;
}