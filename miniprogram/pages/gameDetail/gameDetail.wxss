/* 响应式布局 */
@media (max-width: 1024px) { /* 小尺寸桌面/平板 */
  .role-grid {
    grid-template-columns: repeat(3, 1fr);
    padding: 0 24rpx;
    gap: 20rpx;
  }
}

@media (max-width: 768px) { /* 平板 */
  .role-grid {
    grid-template-columns: repeat(2, 1fr); /* 2列布局 */
    gap: 16rpx;
    padding: 0 16rpx;
  }
  
  .role-card {
    padding: 20rpx;
    min-height: 240rpx;
  }
}

@media (max-width: 480px) { /* 手机 */
  .role-grid {
    grid-template-columns: (3, 1fr); /* 单列布局 */
    gap: 12rpx;
    padding: 0 12rpx;
  }
  
  .role-card {
    min-height: auto;
    padding: 16rpx;
  }
}

