/**index.wxss**/

.section {
    margin-bottom: 30rpx;
    padding: 0 20rpx;
}

.section-title {
    font-size: 1.25rem;
    font-weight: 700;
    margin:  0 0 0 30rpx;
}

/*顶部滑动头图*/

.swiper {
    height: 400rpx;
}

.swiper-item {
    display: flex;
    justify-content: center;
}

.swiper-image {
    height: 100%;
    width: 99%;
    border-radius: 20rpx;
}

/*搜索框样式*/
.search-box {
    display: flex;
    align-items: center;
    background: #f5f5f5;
    padding: 10rpx 20rpx;
    border-radius: 8rpx;
}

.search-input {
    flex: 1;
    margin-left: 20rpx;
    font-size: 28rpx;
}

.search-placeholder {
    color: #999;
    margin-left: 20rpx;
    font-size: 28rpx;
}

/*分类*/

.category {
    display: flex;
    justify-content: space-evenly;
}

.category-background {
    box-sizing: border-box;
    border-radius: 50%;
    padding: 25rpx;
    width: 100rpx;
    height: 100rpx;
    color: white;
    box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.), 0 4px 6px -4px rgba(0, 0, 0, 0.1);
}

.category-icon {
    width: 100%;
    height: 100%;
}

.category-item {
    display: flex;
    flex-direction: column;
    align-items: center;
}