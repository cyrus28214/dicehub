/**index.wxss**/

.section {
    width: 100%;
}

/*顶部滑动头图*/

.swiper {
    height: 350rpx;
}

.swiper-item {
    display: flex;
    flex-direction: column;
    justify-content: center;
}

.swiper-item > view {
    text-align: center;
    width: 100%;
}

.swiper-item-1 {
    background-color: #67a5d9;
}

.swiper-item-2 {
    background-color: #9995da;
}

.swiper-item-3 {
    background-color: #d6867d;
}

/*搜索框样式*/
.search-box {
    display: flex;
    align-items: center;
    margin: 20rpx;
    padding: 10rpx 20rpx;
    background-color: #f5f5f5;
    border-radius: 30rpx;
}

.search-box icon {
    margin-right: 10rpx;
    color: #999;
}

.search-box input {
    flex: 1;
    font-size: 28rpx;
}

.search-placeholder {
    color: #999;
    font-size: 28rpx;
}