<view class="container">
    <view class="section">
        <view class="search-box" bind:tap="onTapSearch">
            <icon type="search" size="20"></icon>
            <input 
              type="text" 
              placeholder="搜索" 
              placeholder-class="search-placeholder"
              disabled
            />
        </view>
    </view>
    <view class="section">
        <swiper class="swiper" autoplay="true">
            <swiper-item class="swiper-item" wx:for="{{hot}}" >
                <image
                    class="swiper-image"
                    src="{{item.image}}"
                    mode="scaleToFill"
                    data-url="{{item.url}}"
                    bind:tap="onTapSwiperItem"
                />            
            </swiper-item>
        </swiper>
    </view>
    <view class="section">
        <view class="category">
            <view class="category-item" 
                  wx:for="{{categories}}" 
                  bind:tap="onRecommendTap"
                  data-url="/pages/category/categoryDetail?id={{item.id}}">
                <view class="category-background" >
                    <image class="category-icon" src="{{item.image}}" />
                </view>
                <view class="category-text">{{item.name}}</view>
            </view>
        </view>
    </view>
    <view class="section">
        <view class="section-title">最近热门</view>
        <gameList 
          games="{{games}}" 
        />
    </view>
</view>
