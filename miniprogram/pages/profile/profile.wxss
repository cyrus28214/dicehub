/* pages/profile/profile.wxss */
.profile-container {
  min-height: 100vh;
  background-color: #f5f5f5;
}

.header-section {
  background-color: #ffffff;
  padding: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 20rpx;
}

.default-avatar, .avatar {
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
  margin-bottom: 20rpx;
}

.nickname {
  font-size: 32rpx;
  color: #333;
}

.login-btn {
  margin-top: 20rpx;
  background-color: #07c160;
  color: #fff;
  font-size: 28rpx;
  padding: 20rpx 60rpx;
  border-radius: 40rpx;
}

.logout-btn {
  margin-top: 20rpx;
  background-color: #f56c6c;
  color: #fff;
  font-size: 28rpx;
  padding: 20rpx 60rpx;
  border-radius: 40rpx;
}

.function-list {
  background-color: #ffffff;
  padding: 20rpx;
}

.function-item {
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #eee;
}

.arrow-icon {
  width: 32rpx;
  height: 32rpx;
}

.function-btn {
  background-color: #07c160;
  color: #fff;
  font-size: 28rpx;
  padding: 20rpx 60rpx;
  border-radius: 40rpx;
}